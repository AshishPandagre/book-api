
<div class="col-sm-12 col-md-6 border">
    <div class="container-fluid">
        <h3 class="my-4">DATA ENTRY</h3>
        <small>
            INFO : 
            page: <%= page %>
            limit: <%= limit %> . <br>
            these values can be changed from the url. <br>
            example - http://localhost:3000/?page=1&limit=3   
            <br><br>
        </small>
        <% if (books.length == 0) { %>
            <h4>looks like this is the end !</h4> 
        <% } %>
        <div class="table-responsive" id="no-more-tables">
            <table class="table bg-white">
                <thead class="bg-dark text-light">
                    <tr>
                        <th>ISBN</th>
                        <th>AUTHOR</th>
                        <th>Publisher</th>
                        <th>Pages</th>
                        <th>Publish Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach(function(book) { %>
                        <tr>
                            <td data-title="isbn"><%= book.isbn %> </td>
                            <td data-title="author"><%= book.author %> </td>
                            <td data-title="publisher"><%= book.publisher %> </td>
                            <td data-title="pages"><%= book.numOfPages %> </td>
                            <td data-title="date"><%= book.publish_date %> </td>
                        </tr>
                    <% }) %>  
                </tbody>
            </table>
        </div>
        <a class="btn btn-primary" href="?page=<%= prev %>">Previous</a>
        <a class="btn btn-primary" style="float: right" href="?page=<%= next %>">Next</a>
    </div>
</div>
